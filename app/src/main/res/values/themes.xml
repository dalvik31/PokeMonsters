<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PokeMonsters" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>


    <!-- Customize your theme here. -->
    <style name="TextViewTitleBold" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:textSize">@dimen/_30sdp</item>
        <item name="android:paddingStart">@dimen/_14sdp</item>
        <item name="android:paddingEnd">@dimen/_14sdp</item>
        <item name="android:paddingBottom">@dimen/_14sdp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextViewTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_14sdp</item>
        <item name="android:paddingStart">@dimen/_14sdp</item>
    </style>

    <style name="TextViewDescription" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:paddingTop">@dimen/_14sdp</item>
        <item name="android:paddingEnd">@dimen/_14sdp</item>
        <item name="android:paddingStart">@dimen/_14sdp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextViewTitleRegions" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">@dimen/_14sdp</item>
        <item name="android:paddingStart">@dimen/_14sdp</item>
    </style>

    <style name="SearchEdittext" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="SearchTextLayout" parent="TextAppearance.AppCompat">

    </style>

    <style name="ButtonRippleNormal">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">?attr/actionBarSize</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/selected_background_button</item>
        <item name="android:description">@string/app_name</item>
        <item name="android:scaleType">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    <style name="CollapsingTextAppearance.Inverse" >
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ToolBarWithNavigationBack">
        <item name="navigationIcon">@drawable/abc_ic_ab_back_material</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.AppCompat"/>
    <style name="TextAppearance.Header">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="TextComponent"/>

    <style name="TextComponent.ItemRow">
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>