<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PokeMonsters" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>

    </style>


    <!-- Customize your theme here. -->
    <style name="TextViewTitleBold" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_yellow</item>
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:textSize">@dimen/_30sdp</item>
        <item name="android:paddingStart">@dimen/_14sdp</item>
        <item name="android:paddingEnd">@dimen/_14sdp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextViewTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_gray</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_14sdp</item>
        <item name="android:paddingStart">@dimen/_14sdp</item>
    </style>

    <style name="TextViewDescription" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_gray</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:paddingTop">@dimen/_14sdp</item>
        <item name="android:paddingEnd">@dimen/_14sdp</item>
        <item name="android:paddingStart">@dimen/_14sdp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextViewTitleRegions" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_gray</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">@dimen/_14sdp</item>
        <item name="android:paddingStart">@dimen/_14sdp</item>
    </style>


    <style name="TextViewTitlePokemon" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_gray</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">@dimen/_14sdp</item>
        <item name="android:paddingStart">@dimen/_14sdp</item>
    </style>


    <style name="TextViewDescriptionPokemon" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_yellow</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">@dimen/_14sdp</item>
        <item name="android:paddingStart">@dimen/_14sdp</item>
    </style>

    <style name="TextViewDescriptionBold" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_gray</item>
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SearchEdittext" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textColorHint">@color/primary_gray</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="ButtonRippleNormal">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">?attr/actionBarSize</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/selected_background_button</item>
        <item name="android:description">@string/app_name</item>
        <item name="android:scaleType">center</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="TextViewMsgBold" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_gray</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:paddingStart">@dimen/_14sdp</item>
        <item name="android:paddingEnd">@dimen/_14sdp</item>
        <item name="android:paddingBottom">@dimen/_14sdp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>